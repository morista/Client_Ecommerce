<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
<welcome-file-list>
    <welcome-file>accueil</welcome-file>
</welcome-file-list>
  <servlet>
    <servlet-name>CreationClient</servlet-name>
    <servlet-class>site.commerce.servlets.CreationClient</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreationCommande</servlet-name>
    <servlet-class>site.commerce.servlets.CreationCommande</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Categorie</servlet-name>
    <servlet-class>site.commerce.servlets.Categorie</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AfficherProduit</servlet-name>
    <servlet-class>site.commerce.servlets.AfficherProduit</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Paniers</servlet-name>
    <servlet-class>site.commerce.servlets.Paniers</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>supprimeArticlePanier</servlet-name>
    <servlet-class>site.commerce.servlets.SupprimeArticle</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Connecter</servlet-name>
  	<servlet-class>site.commerce.servlets.Connecter</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Connecter</servlet-name>
  	<url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Paniers</servlet-name>
    <url-pattern>/monPanier</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>supprimeArticlePanier</servlet-name>
    <url-pattern>/supprimeArticlePanier</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AfficherProduit</servlet-name>
    <url-pattern>/produits</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Categorie</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreationClient</servlet-name>
    <url-pattern>/creationClient</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreationCommande</servlet-name>
    <url-pattern>/creationCommande</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
</web-app>